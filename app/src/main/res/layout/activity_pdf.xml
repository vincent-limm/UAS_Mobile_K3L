<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainContent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/imagereport"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:visibility="gone"></ImageView>

    <RelativeLayout
        android:id="@+id/contentpdf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/livingwall">

    <TextView
        android:id="@+id/judulHalaman"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Incident Report"
        android:textColor="@android:color/primary_text_light"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/descHalamantitle"
        android:layout_width="320dp"
        android:layout_height="28dp"
        android:layout_below="@+id/judulHalaman"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Incident Description"
        android:textSize="20sp"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/descHalaman"
        android:layout_width="320dp"
        android:layout_height="28dp"
        android:layout_below="@+id/descHalamantitle"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Deskripsi Halaman"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/locationtitle"
        android:layout_width="320dp"
        android:layout_height="28dp"
        android:layout_below="@+id/descHalaman"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Location"
        android:textSize="20sp"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/locationHalaman"
        android:layout_width="320dp"
        android:layout_height="28dp"
        android:layout_below="@+id/locationtitle"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Location Halaman"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/phonenumbertitle"
        android:layout_width="320dp"
        android:layout_height="28dp"
        android:layout_below="@+id/locationHalaman"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Phone Number"
        android:textColor="@android:color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/phonenumberHalaman"
        android:layout_width="320dp"
        android:layout_height="28dp"
        android:layout_below="@+id/phonenumbertitle"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Phone Number Halaman"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/emailtitle"
        android:layout_width="320dp"
        android:layout_height="28dp"
        android:layout_below="@+id/phonenumberHalaman"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="E-Mail"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/emailHalaman"
        android:layout_width="320dp"
        android:layout_height="28dp"
        android:layout_below="@+id/emailtitle"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="User E-mail"
        android:textSize="16sp" />

    <Button
        android:id="@+id/ButtonPrint"
        android:layout_below="@+id/emailHalaman"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="0dp"
        android:background="#0C201F1F"
        android:text="Print Report" />
    </RelativeLayout>
</RelativeLayout>